#!/usr/bin/env sh

name=$(whoami)

if !(tmux has -t $name); then
  tmux start-server

  tmux new-session -d -s $name -n "."
  tmux send-keys -t $name "~/.dotfiles" C-m
  tmux send-keys -t $name "clear" C-m
  tmux send-keys -t $name "g" C-m

  tmux new-window -t $name -n "~"
  tmux send-keys -t $name "~" C-m
  tmux send-keys -t $name "clear" C-m
  tmux send-keys -t $name "la" C-m

  tmux select-window -t $name:2
fi

tmux attach-session -t $name
