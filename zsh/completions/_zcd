#compdef zcd

_zcd() {
  local curcontext="$curcontext" state line
  typeset -A opt_args

  _arguments \
    '1: :->dataset'\
    '2: :->files'\
    '-h[display help]'\
    && return 0

  case $state in
    dataset)
      _zfs_dataset
      ;;
    files)
      local ddir="$(zfs list -H -omountpoint $words[-2])"
      _directories -W $ddir
      ;;
    *)
      _arguments ': (ERROR)'
      ;;
  esac

  return 1
}

_zcd "$@"

