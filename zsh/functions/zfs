fmount() {
  local filesystem
  filesystem=$(zfs list | fzf --header-lines=1 +s +m | awk '{print $1}') &&
  case "$(zfs get -H -ovalue mounted $filesystem)" in
    no)
      sudo zfs mount "$filesystem"
      ;;
  esac &&
  cd "$(zfs list -H -omountpoint $filesystem)"
}

funmount() {
  local filesystem
  filesystem=$(zfs list -oname | fzf --header-lines=1 +s +m | awk '{print $1}') &&
  zfs unmount "$filesystem"
}

# vim:set ft=zsh:
